alias :e="vim"


# Misc
alias tf="tail -f "
alias pow="powder"
alias px="ps -aux | grep "
alias get="git pull --rebase && (bundle check || echo b) && rake db:migrate:status db:migrate db:test:prepare test"

# Rails
alias sc="echo 'script/rails console' && ./script/rails console"
alias ss="echo 'script/rails server' && ./script/rails server"
alias sg="echo 'script/rails generate ' && ./script/rails generate "
alias rrg="rake routes | grep "
alias rit="ruby -I test "
alias mig="rake db:migrate db:test:prepare"

# Bundler
alias b='bundle install --path .bundle/gems --binstubs .bundle/bin'

# Django
alias pm='python manage.py '

# Vagrant
alias vnp='vagrant up --no-provision'
alias vu='vagrant up'
alias vh='vagrant halt'
alias vr='vagrant halt && vagrant up --no-provision'
alias vs='vagrant ssh'
alias vst='vagrant status'
